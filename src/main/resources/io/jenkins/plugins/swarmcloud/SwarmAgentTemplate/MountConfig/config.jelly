<?jelly escape-by-default='true'?>
<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:f="/lib/form">
    <f:entry title="Type" field="type"
             description="Mount type: bind, volume, or tmpfs">
        <f:textbox default="bind"/>
    </f:entry>

    <f:entry title="Source" field="source"
             description="Host path (for bind) or volume name (for volume). Leave empty for tmpfs.">
        <f:textbox/>
    </f:entry>

    <f:entry title="Target" field="target"
             description="Container path where the mount will be available">
        <f:textbox/>
    </f:entry>

    <f:entry title="Read Only" field="readOnly">
        <f:checkbox/>
    </f:entry>

    <f:entry>
        <f:repeatableDeleteButton/>
    </f:entry>
</j:jelly>
